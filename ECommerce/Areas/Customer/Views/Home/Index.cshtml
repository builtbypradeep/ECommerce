 @model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var obj in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@obj.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body p-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center"> @obj.Title</p>
                                <p class="card-title text-warning text-center">by <b>@obj.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-center text-opacity-75 mb-0">List Price:<spanc class="text-decoration-line-through">@obj.ListPrice.ToString("c")</spanc></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-center text-opacity-75">As low as: <span>@obj.Price100.ToString("C")</span> </p>   
                            </div>
                        </div>

                        <div>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>