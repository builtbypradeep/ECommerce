<div class=" card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">
                    Company List
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"> Create New Company </i>
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Display Name
                    </th>
                    <th>
                        Index
                    </th>
                    
                </tr>
            </thead>

            <tbody>
                @foreach(var obj in Model.OrderBy(o => o.Name))
                {
                    <tr>
                        <td>
                            @obj.Id
                        </td>

                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Address
                        </td>
                        <td>
                            @obj.City
                        </td>
                        <td>
                            @obj.State
                        </td>
                        <td>
                            @obj.PostalCode
                        </td>
                        <td>
                            @obj.PhoneNumber
                        </td>

                        <td>
                            <a asp-controlle="Company" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class ="bi bi-pencil"> </i>Edit
                            </a>
                            <a asp-controlle="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"> </i>Delete
                            </a>
                        </td>
                   
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>