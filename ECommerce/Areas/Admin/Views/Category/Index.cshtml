@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        
            <div class="row pb-3">

                <div class="col-12 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Category
                    </a>
                </div>
            </div>

            <table class=" table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Display Name
                        </th>

                        <th>
                            Index
                        </th>
                        <th>

                        </th>

                    </tr>

                </thead>

                <tbody>

                    @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete

                                </a>
                            </td>
                        </tr>
                    }

                </tbody>



            </table>
        </div>
    </div>
