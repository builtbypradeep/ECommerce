@model List<Companies>

<div class="card border-0 py-4">
    <div class="card-header bg-secondary bg-gradient">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="text-primary">
                    Company List
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-2">
        <div class="row pb-3 ">
            <div class="col-12 text-end">
                <a asp-controller="Comapny" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Company
                </a>
            </div>

        </div>
        <table id="myTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        PostalCode
                    </th>
                    <th>

                        PhoneNumber
                    </th>

                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>
                            @obj.Id
                        </td>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Address
                        </td>
                        <td>
                            @obj.City
                        </td>
                        <td>
                            @obj.State
                        <td>
                            @obj.PostalCode
                        </td>
                        <td>
                            @obj.PhoneNumber
                        </td>

                        <td>
                            <a asp-controller="Comapny" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Comapny" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
